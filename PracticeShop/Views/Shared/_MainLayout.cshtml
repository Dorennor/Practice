<!DOCTYPE html>
    <html>
    <head>
        <title>Game Store</title>
        <meta charset="utf-8">
        <meta name="keywords" content="">
        <meta name="description" content="">
        <link rel="stylesheet" href="~/css/index.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/js/index.js"></script>
        @*<link href="https://allfont.ru/allfont.css?fonts=squealer-embossed" rel="stylesheet" type="text/css" />
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">*@
    </head>
    <body>
        <header>
            <a href="#"><img class="logo" src="~/image/logo.png"></a>
            <div class="dropdown">
                <button class="dropbtn">MENU</button>
                <div class="dropdown-content menu">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="GamesList">Магазин</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="ShowLibrary">Библиотека</a>
                    }
                    @if (User.IsInRole("Администратор"))
                    {
                        <a class="nav-link text-dark" asp-area="" asp-controller="Store" asp-action="AddGame">Добавить игру</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Менеджмент ролей</a>
                    }
                </div>
            </div>
            <div class="dropdown">
                <button class="dropbtn">SEARCH</button>
                <form class="dropdown-content">
                    <input type="search" name="search" placeholder="search">
                </form>
            </div>
            <div class="dropdown login">
                <button class="dropbtn search">LOGIN</button>
                <form class="dropdown-content login">
                    <input type="text" name="login" placeholder="Login">
                    <input type="password" name="password" placeholder="Password">
                    <a href="#">Register</a>
                </form>
            </div>
        </header>
        <div>
            <div class="tag">
                <img src="~/image/tag.png">
                <p>GAMES ARE RELIGION</p>
            </div>

            <div class="main">
                <aside class="side-l">
                    <div class="side-div">

                         

                    </div>
                    <img src="~/image/side.png">
                </aside>
                <main>
                    <div class="table-list">
                        @RenderBody();
                    </div>
                </main>
                <aside class="side-r">
                    <div class="side-div">

                        

                    </div>
                    <img src="~/image/side.png">
                </aside>
            </div>
        </div>
        <footer>
        </footer>
    </body>
    </html>