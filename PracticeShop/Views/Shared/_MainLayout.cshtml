<!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Game Store</title>
        <meta charset="utf-8">
        <meta name="keywords" content="">
        <meta name="description" content="">
        <link rel="stylesheet" href="~/css/index.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <header>
            <a href="#"><img class="logo" src="~/image/logo.png"></a>
            <div class="dropdown">
                <button class="dropbtn">MENU</button>
                <div class="dropdown-content menu">
                    <a class="nav-link text-white" asp-area="" asp-controller="Store" asp-action="GamesList">Магазин</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-white" asp-area="" asp-controller="Store" asp-action="ShowLibrary">Библиотека</a>
                    }
                    @if (User.IsInRole("Администратор"))
                    {
                        <a class="nav-link text-white" asp-area="" asp-controller="Store" asp-action="AddGame">Добавить игру</a>
                        <a class="nav-link text-white" asp-area="" asp-controller="Role" asp-action="Index">Менеджмент ролей</a>
                    }
                </div>
            </div>
            @*<div class="dropdown">
                <button class="dropbtn">SEARCH</button>
                <form class="dropdown-content">
                    <input type="search" name="search" placeholder="search">
                </form>
            </div>*@
            @*<div class="dropdown login">
                <button class="dropbtn search">LOGIN</button>
                <form class="dropdown-content login">
                    <input type="text" name="login" placeholder="Login">
                    <input type="password" name="password" placeholder="Password">
                    <a href="#">Register</a>
                </form>
            </div>*@
        </header>
        <div>


            <div class="main">
                <aside class="side-l">
                    <div class="side-div">



                    </div>
                    <img src="~/image/side.png">
                </aside>

                <main>
                    <div class="table-list">
                        @RenderBody()
                    </div>
                </main>

                <aside class="side-r">
                    <div class="side-div">



                    </div>
                    <img src="~/image/side.png">
                </aside>
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - Games Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)

    </body>
    </html>